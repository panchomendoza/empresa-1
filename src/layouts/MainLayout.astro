---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, image } = Astro.props; // Recibimos props de las p√°ginas

const primary = import.meta.env.PUBLIC_COLOR_PRIMARY || '#000';
const secondary = import.meta.env.PUBLIC_COLOR_SECONDARY || '#ccc';
---

<html lang="es">
    <head>
        <SEO title={title} description={description} image={image} />

        <style define:vars={{ primary, secondary }}>
            :root {
                --brand-primary: var(--primary);
                --brand-secondary: var(--secondary);
            }
        </style>
    </head>
    <body class="min-h-screen bg-slate-50 flex flex-col">
        <Header />
        <main class="flex-grow">
            <slot />
        </main>
        <Footer />
    </body>
</html>