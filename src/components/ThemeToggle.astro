<button
    id="theme-toggle"
    type="button"
    class="p-2 rounded-brand bg-brand-primary/10 hover:bg-brand-primary/20 dark:bg-white/10 dark:hover:bg-white/20 transition-all duration-200 flex items-center justify-center"
    aria-label="Alternar modo oscuro"
>
    <svg 
        id="theme-toggle-dark-icon" 
        class="w-5 h-5 text-brand-primary dark:hidden block" 
        fill="currentColor" 
        viewBox="0 0 20 20"
    >
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
    </svg>

    <svg 
        id="theme-toggle-light-icon" 
        class="w-5 h-5 text-yellow-400 dark:block hidden" 
        fill="currentColor" 
        viewBox="0 0 20 20"
    >
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414z" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
</button>

<script>
    // Usamos el evento de Astro para asegurar que el script se ejecute al navegar
    const initToggle = () => {
        const themeToggleBtn = document.getElementById("theme-toggle");
        
        themeToggleBtn?.addEventListener("click", () => {
            const element = document.documentElement;
            element.classList.toggle("dark");
            
            const isDark = element.classList.contains("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });
    };

    // Inicializar al cargar la p√°gina
    initToggle();
    // Reinicializar si usas Astro View Transitions
    document.addEventListener('astro:after-swap', initToggle);
</script>