---
// src/components/SEO.astro
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = import.meta.env.PUBLIC_SEO_DESCRIPTION,
  image 
} = Astro.props;

const siteName = import.meta.env.PUBLIC_SITE_NAME;
const favicon = import.meta.env.PUBLIC_FAVICON_URL || "/favicon.svg";

// LÃ³gica de imagen: Si hay imagen de Storyblok se usa, si no, la de por defecto
const finalImage = image || "/default-og-image.png";
const imageURL = finalImage.startsWith('http') 
  ? finalImage 
  : new URL(finalImage, Astro.url).toString();

const fullTitle = title ? `${title} | ${siteName}` : siteName;
---

<meta property="og:image" content={imageURL} />
<meta property="twitter:image" content={imageURL} />