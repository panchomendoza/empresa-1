---
// Header.astro
const LOGO = import.meta.env.PUBLIC_LOGO_URL;
---

<header class="bg-white shadow-md">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <img src={LOGO} alt="Logo" class="h-10 w-auto" />
          <span class="text-xl font-bold text-gray-800">Mi Empresa</span>
        </a>
      </div>

      <!-- Menu Desktop -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">
          Inicio
        </a>
        <a href="/nosotros" class="text-gray-700 hover:text-blue-600 transition-colors">
          Nosotros
        </a>
        
        <!-- Menu con submenu -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-blue-600 transition-colors flex items-center space-x-1">
            <span>Servicios</span>
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Submenu desplegable -->
          <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/servicios/desarrollo" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">
                Desarrollo Web
              </a>
              <a href="/servicios/diseno" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">
                Diseño Gráfico
              </a>
              <a href="/servicios/consultoria" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">
                Consultoría
              </a>
              <a href="/servicios/soporte" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">
                Soporte Técnico
              </a>
            </div>
          </div>
        </div>

        <a href="/contacto" class="text-gray-700 hover:text-blue-600 transition-colors">
          Contacto
        </a>
      </div>

      <!-- Menu Mobile Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-blue-600 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu Mobile -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <a href="/" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">
        Inicio
      </a>
      <a href="/nosotros" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">
        Nosotros
      </a>
      
      <!-- Servicios con submenu mobile -->
      <div class="py-2">
        <button id="mobile-submenu-button" class="w-full text-left text-gray-700 hover:text-blue-600 transition-colors flex items-center justify-between">
          <span>Servicios</span>
          <svg id="mobile-submenu-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="mobile-submenu" class="hidden pl-4 mt-2 space-y-2">
          <a href="/servicios/desarrollo" class="block py-1 text-gray-600 hover:text-blue-600">
            Desarrollo Web
          </a>
          <a href="/servicios/diseno" class="block py-1 text-gray-600 hover:text-blue-600">
            Diseño Gráfico
          </a>
          <a href="/servicios/consultoria" class="block py-1 text-gray-600 hover:text-blue-600">
            Consultoría
          </a>
          <a href="/servicios/soporte" class="block py-1 text-gray-600 hover:text-blue-600">
            Soporte Técnico
          </a>
        </div>
      </div>

      <a href="/contacto" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">
        Contacto
      </a>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Toggle mobile submenu
  const mobileSubmenuButton = document.getElementById('mobile-submenu-button');
  const mobileSubmenu = document.getElementById('mobile-submenu');
  const mobileSubmenuIcon = document.getElementById('mobile-submenu-icon');

  mobileSubmenuButton?.addEventListener('click', () => {
    mobileSubmenu?.classList.toggle('hidden');
    mobileSubmenuIcon?.classList.toggle('rotate-180');
  });
</script>
