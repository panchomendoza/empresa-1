---
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="py-20 text-center">
    <h1 class="text-4xl font-bold" style="color: var(--brand-primary)">
        {blok.title}
    </h1>
    <p class="mt-4 text-gray-600">
        {blok.text}
    </p>
    {blok.button_text && (
        <button class="mt-6 px-6 py-2 rounded text-white bg-[var(--brand-secondary)]">
            {blok.button_text}
        </button>
    )}
</section>